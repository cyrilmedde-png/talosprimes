{
  "name": "Stripe - Envoyer identifiants après paiement",
  "nodes": [
    {
      "parameters": {
        "httpMethod": "POST",
        "path": "stripe-checkout-completed",
        "responseMode": "responseNode",
        "options": {}
      },
      "id": "webhook-stripe",
      "name": "01. Webhook Stripe",
      "type": "n8n-nodes-base.webhook",
      "typeVersion": 1,
      "position": [
        240,
        400
      ],
      "webhookId": "stripe-checkout-completed"
    },
    {
      "parameters": {
        "jsCode": "// Extraire les données du webhook Stripe\nvar payload = $input.item.json;\nvar session = payload.body?.data?.object || payload.body?.object || payload;\n\n// Vérifier que c'est un événement checkout.session.completed\nvar eventType = payload.body?.type || payload.type;\nif (eventType !== 'checkout.session.completed') {\n  return {\n    json: { skip: true, reason: 'Event type not checkout.session.completed' }\n  };\n}\n\n// Extraire les métadonnées de la session\nvar metadata = session.metadata || {};\nvar clientId = metadata.clientId;\nvar tenantId = metadata.tenantId;\n\n// Extraire les informations de l'abonnement créé\nvar subscriptionId = session.subscription;\n\nreturn {\n  json: {\n    eventType,\n    sessionId: session.id,\n    clientId,\n    tenantId,\n    subscriptionId,\n    customerId: session.customer,\n    customerEmail: session.customer_details?.email || session.customer_email,\n    amountTotal: session.amount_total / 100, // Convertir de centimes en euros\n    currency: session.currency\n  }\n};"
      },
      "id": "extract-data",
      "name": "02. Extraire données",
      "type": "n8n-nodes-base.code",
      "typeVersion": 2,
      "position": [
        460,
        400
      ]
    },
    {
      "parameters": {
        "conditions": {
          "options": {
            "caseSensitive": true,
            "leftValue": ""
          },
          "conditions": [
            {
              "id": "36dfd24e-6465-47c3-aff5-fd4a3f2be5ed",
              "leftValue": "={{ $json.clientId }}",
              "operator": {
                "type": "string",
                "operation": "notEmpty"
              }
            },
            {
              "id": "09df45d8-b066-48f8-892c-ffca82d372dc",
              "leftValue": "={{ $json.tenantId }}",
              "operator": {
                "type": "string",
                "operation": "notEmpty"
              }
            }
          ],
          "combinator": "and"
        },
        "options": {}
      },
      "id": "validate-data",
      "name": "03. Validation données",
      "type": "n8n-nodes-base.if",
      "typeVersion": 2,
      "position": [
        680,
        400
      ]
    },
    {
      "parameters": {
        "jsCode": "var d = $input.first().json;\nvar query = \"SELECT cs.temporary_password, cf.email, cf.nom, cf.prenom, cf.raison_sociale FROM client_subscriptions cs JOIN client_finals cf ON cs.client_final_id = cf.id WHERE cf.id = '\" + d.clientId + \"' AND cs.temporary_password IS NOT NULL ORDER BY cs.created_at DESC LIMIT 1;\";\nreturn [{ json: { ...d, query: query } }];"
      },
      "id": "build-sql",
      "name": "04. Build SQL",
      "type": "n8n-nodes-base.code",
      "typeVersion": 2,
      "position": [
        900,
        300
      ]
    },
    {
      "parameters": {
        "operation": "executeQuery",
        "query": "={{ $json.query }}"
