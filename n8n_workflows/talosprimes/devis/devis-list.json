        "query": "=SELECT id, tenant_id, client_final_id, numero_devis, date_devis, date_validite, montant_ht, montant_ttc, tva_taux, description, mode_paiement, statut, invoice_id, lien_pdf, created_at, updated_at FROM devis WHERE tenant_id = '{{ $json.tenantId }}'{{ $json.statut ? \" AND statut = '\" + $json.statut + \"'\" : '' }}{{ $json.clientFinalId ? \" AND client_final_id = '\" + $json.clientFinalId + \"'\" : '' }} ORDER BY date_devis DESC LIMIT {{ $json.limit }} OFFSET {{ $json.offset }}"
