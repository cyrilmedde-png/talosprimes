        "code": "const devis = $('05. Get Devis').json;\nconst nextNum = $('06. Get Next Invoice Number').json.next_num;\nconst numeroFacture = 'FAC-' + new Date().getFullYear() + '-' + String(nextNum).padStart(6, '0');\n\nif (!devis) {\n  throw new Error('Devis not found or not in acceptee status');\n}\n\nreturn {\n  devisId: $json.devisId,\n  tenantId: $json.tenantId,\n  devis: devis,\n  numeroFacture: numeroFacture\n};"
      },
