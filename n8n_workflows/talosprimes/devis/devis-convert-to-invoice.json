      "parameters": {
        "code": "const invoiceId = $('08. Create Invoice').json.id;\nconst lines = $('09. Get Devis Lines').json;\n\nif (!invoiceId) {\n  throw new Error('Failed to create invoice');\n}\n\nif (!Array.isArray(lines)) {\n  throw new Error('No lines found');\n}\n\n// Build INSERT statement for all lines at once\nconst valueClauses = lines.map(line => \n  `(${invoiceId}, '${line.code_article}', '${line.designation}', ${line.quantite}, ${line.prix_unitaire_ht}, ${line.total_ht}, ${line.ordre})`\n).join(', ');\n\nconst insertSql = `INSERT INTO invoice_lines (invoice_id, code_article, designation, quantite, prix_unitaire_ht, total_ht, ordre) VALUES ${valueClauses}`;\n\nreturn {\n  invoiceId: invoiceId,\n  lines: lines,\n  insertSql: insertSql\n};"
      },
