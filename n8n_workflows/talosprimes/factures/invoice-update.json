    {
      "parameters": {
        "jsCode": "const p=$('02. Parser').first().json;\nvar esc=function(s){return (s||'').replace(/'/g,\"''\");};\nvar sets=[];\nif(p.statut)sets.push(\"statut = '\"+esc(p.statut)+\"'\");\nif(p.lienPdf)sets.push(\"lien_pdf = '\"+esc(p.lienPdf)+\"'\");\nif(p.idExternePaiement)sets.push(\"id_externe_paiement = '\"+esc(p.idExternePaiement)+\"'\");\nsets.push(\"updated_at = NOW()\");\nvar query=\"UPDATE invoices SET \"+sets.join(', ')+\" WHERE id = '\"+esc(p.invoiceId)+\"' AND tenant_id = '\"+esc(p.tenantId)+\"'\";\nreturn [{json:{query}}];"
      },
