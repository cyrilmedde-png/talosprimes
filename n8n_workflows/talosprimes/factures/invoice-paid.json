{
  "name": "invoice-paid",
  "nodes": [
    {
      "parameters": {
        "path": "invoice-paid",
        "responseMode": "responseNode",
        "httpMethod": "POST"
      },
      "id": "01. Webhook",
      "name": "01. Webhook",
      "type": "n8n-nodes-base.webhook",
      "typeVersion": 1,
      "position": [100, 200]
    },
    {
      "parameters": {
        "jsCode": "const body = $input.first().json.body || $input.first().json;\n\nif (!body.tenantId || !body.invoiceId) {\n  throw new Error('tenantId and invoiceId are required');\n}\n\nreturn [{ json: {\n  tenantId: body.tenantId,\n  invoiceId: body.invoiceId,\n  referencePayment: body.referencePayment || null,\n  datePaiement: body.datePaiement || new Date().toISOString()\n} }];"
      },
      "id": "02. Parser",
      "name": "02. Parser",
      "type": "n8n-nodes-base.code",
      "typeVersion": 2,
      "position": [300, 200]
    },
    {
      "parameters": {
        "conditions": {
          "string": [
            {
              "value1": "={{ $json.tenantId }}",
              "operation": "isNotEmpty"
            }
          ]
        }
      },
      "id": "03. Valide ?",
      "name": "03. Valide ?",
      "type": "n8n-nodes-base.if",
      "typeVersion": 1,
      "position": [500, 200]
    },
    {
      "parameters": {
        "respondWith": "json",
        "responseBody": "={ \"success\": false, \"error\": \"Validation failed\" }"
      },
      "id": "04. Respond Error",
      "name": "04. Respond Error",
      "type": "n8n-nodes-base.respondToWebhook",
      "typeVersion": 1,
      "position": [700, 100]
    },
    {
      "parameters": {
        "operation": "executeQuery",
        "query": "=UPDATE invoices SET statut = 'payee', id_externe_paiement = {{ $json.referencePayment ? \"'\" + $json.referencePayment.replace(/'/g, \"''\") + \"'\" : 'id_externe_paiement' }}, updated_at = NOW() WHERE id = '{{ $json.invoiceId }}' AND tenant_id = '{{ $json.tenantId }}' AND statut != 'payee' RETURNING id, tenant_id, numero_facture, statut, id_externe_paiement, updated_at"
      },
      "id": "05. Update Invoice",
      "name": "05. Update Invoice",
      "type": "n8n-nodes-base.postgres",
      "typeVersion": 2,
      "credentials": {
        "postgres": {
          "name": "Supabase Postgres",
          "id": "OGqj65ZoFRileCck"
        }
      },
      "position": [700, 300]
    },
    {
      "parameters": {
        "jsCode": "const result = $('05. Update Invoice').first().json;\n\nif (!result || !result.id) {\n  return [{ json: { error: 'Facture non trouvée ou déjà payée' } }];\n}\n\nreturn [{ json: { id: result.id, tenantId: result.tenant_id, numeroFacture: result.numero_facture, statut: result.statut, idExternePaiement: result.id_externe_paiement, updatedAt: result.updated_at } }];"
      },
      "id": "06. Format Response",
      "name": "06. Format Response",
      "type": "n8n-nodes-base.code",
      "typeVersion": 2,
      "position": [900, 300]
    },
    {
      "parameters": {
        "respondWith": "json",
        "responseBody": "={{ JSON.stringify($json) }}"
      },
      "id": "07. Respond",
      "name": "07. Respond",
      "type": "n8n-nodes-base.respondToWebhook",
      "typeVersion": 1,
      "position": [1100, 300]
    }
  ],
  "connections": {
    "01. Webhook": {
      "main": [[{ "node": "02. Parser", "type": "main", "index": 0 }]]
    },
    "02. Parser": {
      "main": [[{ "node": "03. Valide ?", "type": "main", "index": 0 }]]
    },
    "03. Valide ?": {
      "main": [
        [{ "node": "05. Update Invoice", "type": "main", "index": 0 }],
        [{ "node": "04. Respond Error", "type": "main", "index": 0 }]
      ]
    },
    "05. Update Invoice": {
      "main": [[{ "node": "06. Format Response", "type": "main", "index": 0 }]]
    },
    "06. Format Response": {
      "main": [[{ "node": "07. Respond", "type": "main", "index": 0 }]]
    }
  }
}