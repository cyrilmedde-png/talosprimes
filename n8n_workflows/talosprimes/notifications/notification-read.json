        700,
        300
      ]
    },
    {
      "parameters": {
        "jsCode": "const updated = $('05. Update Notification').all().map(item => item.json);\n\nif (updated.length === 0) {\n  throw new Error('Notification not found');\n}\n\nreturn {\n  success: true,\n  message: 'Notification read status updated successfully',\n  notificationId: $json.id\n};"
      },
