        700,
        100
      ]
    },
    {
      "parameters": {
        "operation": "executeQuery",
        "query": "=UPDATE notifications SET lu = {{ $json.lu }}, updated_at = NOW() WHERE id = '{{ $json.id }}' AND tenant_id = '{{ $json.tenantId }}' RETURNING id"
      },
      "id": "05. Update Notification",
      "name": "05. Update Notification",
      "type": "n8n-nodes-base.postgres",
      "typeVersion": 2,
      "credentials": {
