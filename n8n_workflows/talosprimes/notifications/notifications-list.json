        "queryParameters": "={{ [$('02. Parser').first().json.tenantId, $('02. Parser').first().json.lu !== null && $('02. Parser').first().json.lu !== undefined ? $('02. Parser').first().json.lu : null, $('02. Parser').first().json.limit, $('02. Parser').first().json.offset] }}"
