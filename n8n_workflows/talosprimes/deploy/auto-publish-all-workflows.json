        }
      }
    },
    {
      "parameters": {
        "jsCode": "// Extraire les workflows et trier: sub-workflows d'abord (ceux sans webhook trigger)\n// pour qu'ils soient publies avant les parents qui les referencent\nconst response = $input.first().json;\nconst workflows = response.data || response;\nconst selfName = 'Deploy - Auto Publish All Workflows';\nconst filtered = workflows.filter(w => w.name !== selfName);\n\n// Trier: workflows sans 'Execute Workflow Trigger' en premier (sub-workflows),\n// puis les autres (parents)\nconst sorted = filtered.sort((a, b) => {\n  const aHasSubTrigger = (a.nodes || []).some(n => n.type === 'n8n-nodes-base.executeWorkflowTrigger');\n  const bHasSubTrigger = (b.nodes || []).some(n => n.type === 'n8n-nodes-base.executeWorkflowTrigger');\n  if (aHasSubTrigger && !bHasSubTrigger) return -1;\n  if (!aHasSubTrigger && bHasSubTrigger) return 1;\n  return 0;\n});\n\nreturn sorted.map(w => ({ json: { id: String(w.id), name: w.name } }));"
      },
      "id": "filter-sort",
      "name": "02b. Trier & Filtrer",
      "type": "n8n-nodes-base.code",
      "typeVersion": 2,
      "position": [680, 300]
    },
    {
      "parameters": {
        "method": "POST",
        "url": "=http://localhost:5678/api/v1/workflows/{{ $json.id }}/deactivate",
        "authentication": "genericCredentialType",
        "genericAuthType": "httpHeaderAuth",
        "options": {}
      },
      "id": "deactivate-workflow",
