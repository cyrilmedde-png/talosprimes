        "url": "=http://localhost:5678/api/v1/workflows/{{ $json.id }}/activate",
        "authentication": "genericCredentialType",
        "genericAuthType": "httpHeaderAuth",
        "options": {}
      },
      "id": "publish-pass2",
      "name": "06. Publish Pass 2",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 4.2,
      "position": [1880, 300],
      "credentials": {
        "httpHeaderAuth": {
          "id": "REPLACE_HEADER_AUTH_ID",
          "name": "n8n API Key"
        }
      },
      "onError": "continueRegularOutput"
    },
    {
      "parameters": {
        "jsCode": "const items = $input.all();\nconst total = items.length;\nconst successes = items.filter(i => !i.json.error && i.json.active !== false).length;\nconst failures = total - successes;\nreturn [{ json: { success: true, message: `${successes}/${total} workflows publies avec succes${failures > 0 ? `, ${failures} erreurs` : ''}`, total, successes, failures } }];"
      },
      "id": "summary-response",
