    },
    {
      "parameters": {
        "method": "PATCH",
        "url": "=http://localhost:5678/rest/workflows/{{ $json.id }}",
        "authentication": "genericCredentialType",
        "genericAuthType": "httpHeaderAuth",
        "sendBody": true,
        "specifyBody": "json",
        "jsonBody": "={ \"active\": true, \"versionId\": \"\" }",
        "options": {}
      },
      "id": "activate-workflow",
      "name": "04. Activate (Internal API)",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 4.2,
      "position": [1160, 300],
      "credentials": {
        "httpHeaderAuth": {
          "id": "REPLACE_HEADER_AUTH_ID",
          "name": "n8n API Key"
        }
      },
      "onError": "continueRegularOutput"
    },
    {
      "parameters": {
        "jsCode": "const items = $input.all();\nconst total = items.length;\nlet successes = 0;\nlet failures = 0;\nfor (const item of items) {\n  if (item.json.active === true) {\n    successes++;\n  } else {\n    failures++;\n  }\n}\nreturn [{ json: { success: true, message: `${successes}/${total} workflows publies avec succes${failures > 0 ? `, ${failures} erreurs` : ''}`, total, successes, failures } }];"
      },
      "id": "summary-response",
      "name": "05. Resume",
