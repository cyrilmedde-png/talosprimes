        "jsCode": "const body = $input.body;\nreturn {\n  tenantId: body.tenantId,\n  page: body.page || 1,\n  limit: body.limit || 20,\n  statut: body.statut || null,\n  clientFinalId: body.clientFinalId || null,\n  offset: ((body.page || 1) - 1) * (body.limit || 20)\n};"
      },
      "name": "Parser",
      "type": "n8n-nodes-base.code",
      "typeVersion": 2,
