      "typeVersion": 1,
      "position": [
        850,
        150
      ]
    },
    {
      "parameters": {
        "operation": "executeQuery",
        "query": "SELECT COUNT(*) as total FROM avoirs WHERE tenant_id = '{{ $json.tenantId }}'{{ $json.statut ? \" AND statut = '\" + $json.statut + \"'\" : \"\" }}{{ $json.clientFinalId ? \" AND client_final_id = '\" + $json.clientFinalId + \"'\" : \"\" }}"
      },
      "name": "Postgres Count",
      "type": "n8n-nodes-base.postgres",
      "typeVersion": 2,
      "position": [
        850,
        250
      ],
      "credentials": {
        "postgres": {
          "name": "Supabase Postgres",
          "id": "REPLACE_WITH_POSTGRES_CREDENTIAL_ID"
        }
      }
    },
    {
      "parameters": {
        "operation": "executeQuery",
        "query": "SELECT a.*, cf.email, cf.nom, cf.prenom, cf.raison_sociale, i.numero_facture as invoice_numero FROM avoirs a LEFT JOIN client_finals cf ON a.client_final_id = cf.id LEFT JOIN invoices i ON a.invoice_id = i.id WHERE a.tenant_id = '{{ $json.tenantId }}'{{ $json.statut ? \" AND a.statut = '\" + $json.statut + \"'\" : \"\" }}{{ $json.clientFinalId ? \" AND a.client_final_id = '\" + $json.clientFinalId + \"'\" : \"\" }} ORDER BY a.date_avoir DESC LIMIT {{ $json.limit }} OFFSET {{ $json.offset }}"
      },
      "name": "Postgres List",
      "type": "n8n-nodes-base.postgres",
      "typeVersion": 2,
      "position": [
        850,
        350
      ],
      "credentials": {
        "postgres": {
          "name": "Supabase Postgres",
          "id": "REPLACE_WITH_POSTGRES_CREDENTIAL_ID"
        }
      }
    },
    {
      "parameters": {
        "jsCode": "const count = $input[0][0].json.total;\nconst avoirs = $input[1].json;\nconst page = $json.page;\nconst limit = $json.limit;\nconst totalPages = Math.ceil(count / limit);\n\nreturn {\n  avoirs: avoirs,\n  count: avoirs.length,\n  total: parseInt(count),\n  page: page,\n  limit: limit,\n  totalPages: totalPages,\n  success: true\n};"
      },
      "name": "Format Response",
      "type": "n8n-nodes-base.code",
      "typeVersion": 2,
      "position": [
