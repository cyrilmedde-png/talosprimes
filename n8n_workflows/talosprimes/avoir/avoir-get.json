    },
    {
      "parameters": {
        "jsCode": "const rawAvoir = $('Postgres Get').first().json;\nconst rawLines = $('Postgres Get Lines').all().map(item => item.json);\n\nif (!rawAvoir || !rawAvoir.id) {\n  return [{json: { success: false, error: 'Avoir not found' }}];\n}\n\nconst avoir = {\n  ...rawAvoir,\n  clientFinal: rawAvoir.client_final_id ? {\n    id: rawAvoir.client_final_id,\n    nom: rawAvoir.client_nom || null,\n    prenom: rawAvoir.client_prenom || null,\n    email: rawAvoir.client_email || null,\n    telephone: rawAvoir.client_telephone || null,\n    raisonSociale: rawAvoir.client_raison_sociale || null,\n    adresse: rawAvoir.client_adresse || null,\n  } : null,\n  lines: rawLines,\n};\n\nreturn [{json: { avoir, success: true }}];"
      },
