      "typeVersion": 1,
      "position": [
        850,
        150
      ]
    },
    {
      "parameters": {
        "operation": "executeQuery",
        "query": "UPDATE avoirs SET statut = 'validee', updated_at = NOW() WHERE id = '{{ $json.avoirId }}' AND tenant_id = '{{ $json.tenantId }}' AND statut = 'brouillon' RETURNING *"
      },
      "name": "Postgres Update",
      "type": "n8n-nodes-base.postgres",
      "typeVersion": 2,
      "position": [
        850,
        250
      ],
      "credentials": {
        "postgres": {
          "name": "Postgres"
        }
      }
    },
    {
      "parameters": {
        "jsCode": "const result = $input[0][0];\n\nif (!result || !result.json) {\n  return {\n    success: false,\n    error: 'Avoir not found or not in brouillon status'\n  };\n}\n\nconst avoir = result.json;\n\nreturn {\n  avoirId: avoir.id,\n  numeroAvoir: avoir.numero_avoir,\n  statut: avoir.statut,\n  dateAvoir: avoir.date_avoir,\n  montantHt: avoir.montant_ht,\n  montantTtc: avoir.montant_ttc,\n  success: true,\n  message: 'Avoir validated successfully'\n};"
      },
      "name": "Format Response",
      "type": "n8n-nodes-base.code",
      "typeVersion": 2,
      "position": [
        1050,
        250
      ]
    },
    {
