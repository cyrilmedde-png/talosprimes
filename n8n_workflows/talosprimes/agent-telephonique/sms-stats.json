    },
    {
      "parameters": {
        "operation": "executeQuery",
        "query": "SELECT DATE(created_at) as sms_date, COUNT(*) as count FROM sms_logs WHERE tenant_id = $1 AND created_at >= CURRENT_DATE - INTERVAL '7 days' GROUP BY DATE(created_at) ORDER BY sms_date DESC",
        "queryParameters": "={{ [$json.tenantId] }}"
      },
      "name": "Postgres Last 7 Days",
      "type": "n8n-nodes-base.postgres",
      "typeVersion": 2,
      "position": [
        1050,
        350
      ],
      "credentials": {
        "postgres": {
          "name": "Supabase Postgres",
          "id": "OGqj65ZoFRileCck"
        }
      }
    },
    {
      "parameters": {
        "jsCode": "const totalSMS = $input[0].json.total_sms || 0;\nconst todaySMS = $input[1].json.today_sms || 0;\nconst byStatus = $input[2].all().map(item => item.json);\nconst byDirection = $input[3].all().map(item => item.json);\nconst last7Days = $input[4].all().map(item => item.json);\n\nreturn {\n  stats: {\n    total_sms: totalSMS,\n    today_sms: todaySMS,\n    by_status: byStatus,\n    by_direction: byDirection,\n    last_7_days: last7Days\n  },\n  success: true,\n  message: 'SMS statistics retrieved successfully'\n};"
      },
      "name": "Format Response",
      "type": "n8n-nodes-base.code",
      "typeVersion": 2,
      "position": [
        1250,
        300
      ]
