    },
    {
      "parameters": {
        "operation": "executeQuery",
        "query": "SELECT direction, COUNT(*) as count FROM sms_logs WHERE tenant_id = $1 GROUP BY direction ORDER BY count DESC",
        "queryParameters": "={{ [$json.tenantId] }}"
      },
      "name": "Postgres By Direction",
      "type": "n8n-nodes-base.postgres",
      "typeVersion": 2,
      "position": [
        1050,
        250
