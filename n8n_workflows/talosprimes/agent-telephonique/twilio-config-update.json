{
  "name": "twilio-config-update",
  "nodes": [
    {
      "parameters": {
        "path": "twilio-config-update",
        "responseMode": "responseNode",
        "httpMethod": "POST"
      },
      "name": "Webhook",
      "type": "n8n-nodes-base.webhook",
      "typeVersion": 1,
      "position": [
        250,
        250
      ]
    },
    {
      "parameters": {
        "jsCode": "const body = $input.body;\nreturn {\n  id: body.id,\n  tenantId: body.tenantId,\n  accountSid: body.accountSid,\n  authToken: body.authToken,\n  phoneNumber: body.phoneNumber,\n  isActive: body.isActive !== undefined ? body.isActive : true\n};"
      },
      "name": "Parser",
      "type": "n8n-nodes-base.code",
      "typeVersion": 2,
      "position": [
        450,
        250
      ]
    },
    {
      "parameters": {
        "conditions": {
          "boolean": [
            {
              "value1": "={{ $json.id }}",
              "operation": "notEmpty"
            },
            {
              "value1": "={{ $json.tenantId }}",
              "operation": "notEmpty"
            }
          ]
        }
      },
      "name": "If",
      "type": "n8n-nodes-base.if",
      "typeVersion": 1,
      "position": [
        650,
        250
      ]
    },
    {
      "parameters": {
        "respondWithCode": 400,
        "responseBody": "={{ JSON.stringify({success: false, error: 'Missing required fields: id, tenantId'}) }}"
      },
      "name": "Respond Error",
      "type": "n8n-nodes-base.respondToWebhook",
      "typeVersion": 1,
      "position": [
        850,
        150
      ]
    },
    {
      "parameters": {
        "host": "{{ $env.DB_HOST }}",
        "database": "{{ $env.DB_NAME }}",
        "user": "{{ $env.DB_USER }}",
        "password": "{{ $env.DB_PASSWORD }}",
        "port": 5432,
        "operation": "executeQuery",
        "query": "={{ $json.query }}",
        "queryParameters": "={{ $json.params }}"
      },
      "name": "Postgres Update",
      "type": "n8n-nodes-base.postgres",
      "typeVersion": 2,
      "position": [
        850,
        250
      ]
    },
    {
      "parameters": {
        "jsCode": "return {\n  configId: $json.id,\n  phoneNumber: $json.phoneNumber,\n  isActive: $json.isActive,\n  success: true,\n  message: 'Twilio config updated successfully'\n};"
      },
      "name": "Format Response",
      "type": "n8n-nodes-base.code",
      "typeVersion": 2,
      "position": [
        1050,
        250
      ]
    },
    {
      "parameters": {
        "responseBody": "={{ JSON.stringify($json) }}"
      },
      "name": "Respond",
      "type": "n8n-nodes-base.respondToWebhook",
      "typeVersion": 1,
      "position": [
        1250,
        250
      ]
    },
    {
      "parameters": {
        "jsCode": "const data = $input.first().json;\nconst setClauses = [];\nconst params = [];\nlet idx = 1;\n\nif (data.accountSid !== undefined) {\n  setClauses.push('account_sid = $' + idx);\n  params.push(data.accountSid);\n  idx++;\n}\n\nif (data.authToken !== undefined) {\n  setClauses.push('auth_token = $' + idx);\n  params.push(data.authToken);\n  idx++;\n}\n\nif (data.phoneNumber !== undefined) {\n  setClauses.push('phone_number = $' + idx);\n  params.push(data.phoneNumber);\n  idx++;\n}\n\nif (data.isActive !== undefined) {\n  setClauses.push('is_active = $' + idx);\n  params.push(!!data.isActive);\n  idx++;\n}\n\nsetClauses.push('updated_at = NOW()');\n\nconst whereParts = [];\nwhereParts.push('id = $' + idx);\nparams.push(data.id);\nidx++;\nwhereParts.push('tenant_id = $' + idx);\nparams.push(data.tenantId);\nidx++;\n\nconst query = 'UPDATE twilio_configs SET ' + setClauses.join(', ') + ' WHERE ' + whereParts.join(' AND ');\n\nreturn [{ json: { ...data, query, params } }];"
      },
      "id": "Build Update Query",
      "name": "Build Update Query",
      "type": "n8n-nodes-base.code",
      "typeVersion": 2,
      "position": [
        650,
        250
      ]
    }
  ],
