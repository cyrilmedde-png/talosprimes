      "parameters": {
        "jsCode": "const bon = $('05. Get Bon').first().json;\nconst rawLines = $('06. Get Lines').all().map(item => item.json);\nconst invoiceRows = $('08. Get Invoice').all().map(item => item.json);\nconst invoice = invoiceRows.length > 0 && invoiceRows[0].id ? invoiceRows[0] : null;\n\nif (!bon || !bon.id) {\n  throw new Error('Bon de commande not found');\n}\n\nconst bonData = {\n  ...bon,\n  clientFinal: bon.client_final_id ? {\n    id: bon.client_final_id,\n    nom: bon.client_nom || null,\n    prenom: bon.client_prenom || null,\n    email: bon.client_email || null,\n    telephone: bon.client_telephone || null,\n    raisonSociale: bon.client_raison_sociale || null,\n  } : null,\n  lines: rawLines,\n  invoice: invoice\n};\n\nreturn [{json: { bon: bonData, success: true }}];"
