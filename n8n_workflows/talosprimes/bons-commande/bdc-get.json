      "parameters": {
        "jsCode": "const bon = $('05. Get Bon').first().json;\nconst lines = $('06. Get Lines').all().map(item => item.json);\nlet hasInvoice = false;\n\nif (bon && bon.invoice_id) {\n  hasInvoice = true;\n}\n\nreturn [{json: { ...bon, hasInvoice, lines }}];"
