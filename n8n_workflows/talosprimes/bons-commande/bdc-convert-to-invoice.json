    },
    {
      "parameters": {
        "jsCode": "const bon = $('05. Get Bon').first().json;\n\nif (!bon) {\n  throw new Error('Bon de commande not found');\n}\n\nif (bon.statut === 'facture' || bon.statut === 'annule') {\n  throw new Error('Cannot convert bon with statut: ' + bon.statut);\n}\n\nreturn {\n  bonValid: true\n};"
      },
      "id": "06. Validate Bon",
      "name": "06. Validate Bon",
      "type": "n8n-nodes-base.code",
      "typeVersion": 2,
      "position": [
        900,
        300
      ]
    },
    {
      "parameters": {
        "operation": "executeQuery",
        "query": "=SELECT COALESCE(MAX(CAST(SUBSTRING(numero_facture, -6) AS INTEGER)), 0) + 1 as next_num FROM invoices WHERE tenant_id = '{{ $json.tenantId }}' AND numero_facture LIKE 'INV-' || TO_CHAR(CURRENT_DATE, 'YYYY') || '-%'"
      },
      "id": "07. Get Next Numero",
      "name": "07. Get Next Numero",
      "type": "n8n-nodes-base.postgres",
      "typeVersion": 2,
      "credentials": {
        "postgres": {
          "name": "Supabase Postgres",
          "id": "REPLACE_WITH_POSTGRES_CREDENTIAL_ID"
        }
      },
      "position": [
        1100,
        300
      ]
    },
    {
      "parameters": {
        "jsCode": "const nextNum = $('07. Get Next Numero').first().json.next_num;\nconst year = new Date().getFullYear();\nconst numeroFacture = `INV-${year}-${String(nextNum).padStart(6, '0')}`;\n\nreturn {\n  numeroFacture: numeroFacture\n};"
      },
      "id": "08. Generate Numero",
      "name": "08. Generate Numero",
      "type": "n8n-nodes-base.code",
      "typeVersion": 2,
      "position": [
        1300,
        300
      ]
