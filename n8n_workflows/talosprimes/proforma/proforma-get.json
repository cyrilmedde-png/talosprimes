    {
      "parameters": {
        "operation": "executeQuery",
        "query": "SELECT p.id, p.tenant_id, p.client_final_id, p.numero_proforma, p.date_proforma, p.date_validite, p.montant_ht, p.montant_ttc, p.tva_taux, p.description, p.mode_paiement, p.statut, p.invoice_id, p.lien_pdf, p.created_at, p.updated_at, c.id as client_id, c.nom as client_nom, c.email as client_email FROM proformas p LEFT JOIN clients c ON p.client_final_id = c.id WHERE p.id = {{ $json.proformaId }}"
      },
