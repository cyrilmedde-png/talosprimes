        }
      },
      "position": [
        700,
        400
      ]
    },
    {
      "parameters": {
        "jsCode": "const rawProforma = $('05. Get Proforma').first().json;\nconst rawLines = $('06. Get Lines').all().map(item => item.json);\n\nif (!rawProforma || !rawProforma.id) {\n  throw new Error('Proforma not found');\n}\n\nconst proforma = {\n  ...rawProforma,\n  clientFinal: rawProforma.client_final_id ? {\n    id: rawProforma.client_final_id,\n    nom: rawProforma.client_nom || null,\n    prenom: rawProforma.client_prenom || null,\n    email: rawProforma.client_email || null,\n    telephone: rawProforma.client_telephone || null,\n    raisonSociale: rawProforma.client_raison_sociale || null,\n  } : null,\n  lines: rawLines,\n};\n\nreturn [{json: { proforma, success: true }}];"
      },
