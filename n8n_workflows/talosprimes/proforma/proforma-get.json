    {
      "parameters": {
        "operation": "executeQuery",
        "query": "=SELECT id, proforma_id, code_article, designation, quantite, prix_unitaire_ht, total_ht, ordre FROM proforma_lines WHERE proforma_id = {{ $json.proformaId }}"
      },
      "id": "06. Get Lines",
