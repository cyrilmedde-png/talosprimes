    {
      "parameters": {
        "operation": "executeQuery",
        "query": "=SELECT p.id, p.tenant_id, p.client_final_id, p.numero_proforma, p.date_proforma, p.date_validite, p.montant_ht, p.montant_ttc, p.tva_taux, p.description, p.mode_paiement, p.statut, p.invoice_id, p.lien_pdf, p.created_at, p.updated_at, cf.nom as client_nom, cf.prenom as client_prenom, cf.email as client_email, cf.telephone as client_telephone, cf.raison_sociale as client_raison_sociale FROM proformas p LEFT JOIN client_finals cf ON p.client_final_id = cf.id WHERE p.id = '{{ $json.proformaId }}'"
      },
