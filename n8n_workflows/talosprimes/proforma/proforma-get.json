    {
      "parameters": {
        "code": "const proforma = $('05. Get Proforma').first();\nconst lines = $('06. Get Lines').all();\n\nif (!proforma) {\n  throw new Error('Proforma not found');\n}\n\nreturn {\n  proforma: proforma,\n  lines: lines,\n  success: true\n};"
      },
