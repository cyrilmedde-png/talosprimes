        500,
        200
      ]
    },
    {
      "parameters": {
        "respondWithOptions": {
          "responseType": "json"
        },
        "responseBody": "{\n  \"success\": false,\n  \"error\": \"Validation failed\"\n}"
      },
      "id": "04. Respond Error",
      "name": "04. Respond Error",
      "type": "n8n-nodes-base.respondToWebhook",
      "typeVersion": 1,
      "position": [
        700,
        100
      ]
    },
    {
      "parameters": {
        "operation": "executeQuery",
        "query": "=SELECT id, tenant_id, client_final_id, numero_proforma, date_proforma, montant_ht, montant_ttc, tva_taux, description, mode_paiement FROM proformas WHERE id = '{{ $json.proformaId }}' AND tenant_id = '{{ $json.tenantId }}' AND statut = 'acceptee'"
      },
      "id": "05. Get Proforma",
      "name": "05. Get Proforma",
      "type": "n8n-nodes-base.postgres",
      "typeVersion": 2,
      "credentials": {
        "postgres": {
          "name": "Supabase Postgres",
          "id": "REPLACE_WITH_POSTGRES_CREDENTIAL_ID"
        }
      },
      "position": [
        700,
        300
      ]
    },
    {
      "parameters": {
        "operation": "executeQuery",
        "query": "=SELECT COALESCE(MAX(CAST(SUBSTRING(numero_facture, 5) AS INTEGER)), 0) + 1 as next_num FROM invoices WHERE numero_facture LIKE 'FAC-' || TO_CHAR(CURRENT_DATE, 'YYYY') || '-%'"
      },
      "id": "06. Get Next Invoice Number",
      "name": "06. Get Next Invoice Number",
      "type": "n8n-nodes-base.postgres",
      "typeVersion": 2,
      "credentials": {
        "postgres": {
          "name": "Supabase Postgres",
          "id": "REPLACE_WITH_POSTGRES_CREDENTIAL_ID"
        }
      },
      "position": [
        700,
        400
      ]
    },
    {
      "parameters": {
        "jsCode": "const proforma = $('05. Get Proforma').first().json;\nconst nextNum = $('06. Get Next Invoice Number').first().json.next_num;\nconst numeroFacture = 'FAC-' + new Date().getFullYear() + '-' + String(nextNum).padStart(6, '0');\n\nif (!proforma) {\n  throw new Error('Proforma not found or not in acceptee status');\n}\n\nreturn {\n  proformaId: $json.proformaId,\n  tenantId: $json.tenantId,\n  proforma: proforma,\n  numeroFacture: numeroFacture\n};"
      },
      "id": "07. Prepare Invoice Data",
      "name": "07. Prepare Invoice Data",
      "type": "n8n-nodes-base.code",
      "typeVersion": 2,
      "position": [
        900,
        350
      ]
    },
    {
      "parameters": {
        "operation": "executeQuery",
        "query": "=INSERT INTO invoices (type, tenant_id, client_final_id, numero_facture, date_facture, date_echeance, montant_ht, montant_ttc, tva_taux, description, mode_paiement, statut, created_at, updated_at) VALUES ('standard', '{{ $json.tenantId }}', '{{ $json.proforma.client_final_id }}', '{{ $json.numeroFacture }}', NOW()::date, (NOW() + INTERVAL '30 days')::date, {{ $json.proforma.montant_ht }}, {{ $json.proforma.montant_ttc }}, {{ $json.proforma.tva_taux }}, '{{ $json.proforma.description }}', '{{ $json.proforma.mode_paiement }}', 'brouillon', NOW(), NOW()) RETURNING id"
      },
      "id": "08. Create Invoice",
      "name": "08. Create Invoice",
      "type": "n8n-nodes-base.postgres",
      "typeVersion": 2,
      "credentials": {
        "postgres": {
          "name": "Supabase Postgres",
          "id": "REPLACE_WITH_POSTGRES_CREDENTIAL_ID"
        }
      },
      "position": [
        1100,
        350
      ]
    },
    {
      "parameters": {
        "operation": "executeQuery",
        "query": "=SELECT id, code_article, designation, quantite, prix_unitaire_ht, total_ht, ordre FROM proforma_lines WHERE proforma_id = '{{ $json.proformaId }}'"
      },
      "id": "09. Get Proforma Lines",
      "name": "09. Get Proforma Lines",
      "type": "n8n-nodes-base.postgres",
      "typeVersion": 2,
      "credentials": {
        "postgres": {
          "name": "Supabase Postgres",
          "id": "REPLACE_WITH_POSTGRES_CREDENTIAL_ID"
        }
      },
      "position": [
        1100,
        450
      ]
    },
    {
      "parameters": {
        "jsCode": "const invoiceId = $('08. Create Invoice').first().json.id;\nconst rawLines = $('09. Get Proforma Lines').all().map(item => item.json);\n\nreturn {\n  invoiceId,\n  lines: rawLines,\n  hasLines: rawLines.length > 0\n};"
      },
      "id": "10. Prepare Lines",
      "name": "10. Prepare Lines",
      "type": "n8n-nodes-base.code",
      "typeVersion": 2,
      "position": [
        1300,
        400
      ]
    },
    {
      "parameters": {
        "operation": "executeQuery",
        "query": "={{ $json.lines && $json.lines.length > 0 ? $json.lines.map(item => \"INSERT INTO invoice_lines (id, invoice_id, code_article, designation, quantite, prix_unitaire_ht, total_ht, ordre) VALUES (gen_random_uuid(), '\" + $json.invoiceId + \"', \" + (item.code_article ? \"'\" + item.code_article.replace(/'/g, \"''\") + \"'\" : \"NULL\") + \", '\" + (item.designation || \"\").replace(/'/g, \"''\") + \"', \" + (item.quantite || 0) + \", \" + (item.prix_unitaire_ht || 0) + \", \" + (item.total_ht || 0) + \", \" + (item.ordre || 0) + \")\").join(\"; \") + \"; SELECT 1\" : \"SELECT 1\" }}"
      },
      "id": "11. Create Invoice Lines",
      "name": "11. Create Invoice Lines",
      "type": "n8n-nodes-base.postgres",
      "typeVersion": 2,
      "credentials": {
        "postgres": {
          "name": "Supabase Postgres",
          "id": "REPLACE_WITH_POSTGRES_CREDENTIAL_ID"
        }
      },
      "position": [
        1500,
        400
      ]
    },
    {
      "parameters": {
        "operation": "executeQuery",
        "query": "=UPDATE proformas SET statut = 'facturee', invoice_id = '{{ $('08. Create Invoice').first().json.id }}', updated_at = NOW() WHERE id = '{{ $json.proformaId }}'"
      },
      "id": "12. Update Proforma",
      "name": "12. Update Proforma",
      "type": "n8n-nodes-base.postgres",
      "typeVersion": 2,
      "credentials": {
        "postgres": {
          "name": "Supabase Postgres",
          "id": "REPLACE_WITH_POSTGRES_CREDENTIAL_ID"
        }
      },
      "position": [
        1700,
        400
      ]
    },
    {
      "parameters": {
        "jsCode": "return {\n  success: true,\n  message: 'Proforma converted to invoice successfully',\n  proformaId: $json.proformaId,\n  invoiceId: $('08. Create Invoice').first().json.id,\n  numeroFacture: $json.numeroFacture\n};"
      },
