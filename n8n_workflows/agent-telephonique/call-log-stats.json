        "password": "{{ $env.DB_PASSWORD }}",
        "port": 5432,
        "operation": "executeQuery",
        "query": "SELECT action_taken, COUNT(*) as count FROM call_logs WHERE tenant_id = '{{ $json.tenantId }}' AND action_taken IS NOT NULL GROUP BY action_taken ORDER BY count DESC"
      },
      "name": "Postgres By Action",
      "type": "n8n-nodes-base.postgres",
      "typeVersion": 2,
      "position": [
        1050,
        250
