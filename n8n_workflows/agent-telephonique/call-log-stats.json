        "user": "{{ $env.DB_USER }}",
        "password": "{{ $env.DB_PASSWORD }}",
        "port": 5432,
        "operation": "executeQuery",
        "query": "SELECT COUNT(*) as today_calls FROM call_logs WHERE tenant_id = '{{ $json.tenantId }}' AND DATE(created_at) = CURRENT_DATE"
      },
      "name": "Postgres Today Calls",
      "type": "n8n-nodes-base.postgres",
      "typeVersion": 2,
      "position": [
        850,
        350
      ]
    },
    {
      "parameters": {
        "host": "{{ $env.DB_HOST }}",
        "database": "{{ $env.DB_NAME }}",
        "user": "{{ $env.DB_USER }}",
        "password": "{{ $env.DB_PASSWORD }}",
        "port": 5432,
        "operation": "executeQuery",
        "query": "SELECT ROUND(AVG(EXTRACT(EPOCH FROM (ended_at - started_at)))) as avg_duration_seconds FROM call_logs WHERE tenant_id = '{{ $json.tenantId }}' AND ended_at IS NOT NULL"
      },
      "name": "Postgres Avg Duration",
      "type": "n8n-nodes-base.postgres",
      "typeVersion": 2,
      "position": [
        850,
        450
