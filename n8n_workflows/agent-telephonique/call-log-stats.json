        "host": "{{ $env.DB_HOST }}",
        "database": "{{ $env.DB_NAME }}",
        "user": "{{ $env.DB_USER }}",
        "password": "{{ $env.DB_PASSWORD }}",
        "port": 5432,
        "operation": "executeQuery",
        "query": "SELECT urgency, COUNT(*) as count FROM call_logs WHERE tenant_id = '{{ $json.tenantId }}' GROUP BY urgency ORDER BY count DESC"
      },
      "name": "Postgres By Urgency",
      "type": "n8n-nodes-base.postgres",
      "typeVersion": 2,
      "position": [
        850,
        550
