        "user": "{{ $env.DB_USER }}",
        "password": "{{ $env.DB_PASSWORD }}",
        "port": 5432,
        "operation": "executeQuery",
        "query": "SELECT sentiment, COUNT(*) as count FROM call_logs WHERE tenant_id = '{{ $json.tenantId }}' AND sentiment IS NOT NULL GROUP BY sentiment ORDER BY count DESC"
      },
      "name": "Postgres By Sentiment",
      "type": "n8n-nodes-base.postgres",
      "typeVersion": 2,
      "position": [
        1050,
        350
      ]
