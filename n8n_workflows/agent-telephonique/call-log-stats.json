        "host": "{{ $env.DB_HOST }}",
        "database": "{{ $env.DB_NAME }}",
        "user": "{{ $env.DB_USER }}",
        "password": "{{ $env.DB_PASSWORD }}",
        "port": 5432,
        "operation": "executeQuery",
        "query": "SELECT DATE(created_at) as call_date, COUNT(*) as count FROM call_logs WHERE tenant_id = '{{ $json.tenantId }}' AND created_at >= CURRENT_DATE - INTERVAL '7 days' GROUP BY DATE(created_at) ORDER BY call_date DESC"
      },
      "name": "Postgres Last 7 Days",
      "type": "n8n-nodes-base.postgres",
      "typeVersion": 2,
      "position": [
        1050,
        450
      ]
    },
    {
      "parameters": {
        "jsCode": "const totalCalls = $input[0].json.total_calls || 0;\nconst todayCalls = $input[1].json.today_calls || 0;\nconst avgDuration = $input[2].json.avg_duration_seconds || 0;\nconst byUrgency = $input[3].all().map(item => item.json);\nconst byAction = $input[4].all().map(item => item.json);\nconst bySentiment = $input[5].all().map(item => item.json);\nconst last7Days = $input[6].all().map(item => item.json);\n\nreturn {\n  stats: {\n    total_calls: totalCalls,\n    today_calls: todayCalls,\n    avg_duration_seconds: avgDuration,\n    avg_duration_minutes: Math.round(avgDuration / 60),\n    by_urgency: byUrgency,\n    by_action: byAction,\n    by_sentiment: bySentiment,\n    last_7_days: last7Days\n  },\n  success: true,\n  message: 'Call statistics retrieved successfully'\n};"
      },
      "name": "Format Response",
      "type": "n8n-nodes-base.code",
      "typeVersion": 2,
      "position": [
        1250,
        350
      ]
    },
