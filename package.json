{
  "name": "talosprimes",
  "version": "0.1.0",
  "private": true,
  "description": "SaaS de gestion d'entreprise orchestrÃ© par n8n",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm --filter @talosprimes/platform dev & pnpm --filter @talosprimes/client dev",
    "build": "pnpm --filter @talosprimes/shared build && pnpm --filter @talosprimes/platform build && pnpm --filter @talosprimes/client build",
    "build:shared": "pnpm --filter @talosprimes/shared build",
    "build:platform": "pnpm --filter @talosprimes/shared build && pnpm --filter @talosprimes/platform build",
    "build:client": "pnpm --filter @talosprimes/client build",
    "test": "pnpm --recursive test",
    "lint": "pnpm --recursive lint",
    "type-check": "pnpm --recursive type-check",
    "clean": "pnpm --recursive clean && rm -rf node_modules"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}
