{
  "name": "@talosprimes/platform",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "type-check": "tsc --noEmit",
    "lint": "echo 'No linting configured for platform'",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "db:seed": "tsx prisma/seed.ts",
    "db:seed:dev": "tsx prisma/seeds/run-dev.ts",
    "workflow:create": "tsx scripts/create-workflow-link.ts",
    "workflow:setup-leads": "tsx scripts/setup-leads-workflows.ts",
    "workflow:setup-clients": "tsx scripts/setup-clients-workflows.ts",
    "workflow:setup-subscriptions": "tsx scripts/setup-subscriptions-workflows.ts",
    "workflow:setup-invoices": "tsx scripts/setup-invoices-workflows.ts",
    "workflow:ensure-invoices-list": "tsx scripts/ensure-invoices-list.ts",
    "workflow:create-invoices-list-link": "tsx scripts/create-invoices-list-link.ts",
    "workflow:fix-duplicates": "tsx scripts/fix-duplicate-workflow-links.ts",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@prisma/client": "^5.7.1",
    "@talosprimes/shared": "workspace:*",
    "fastify": "^4.25.2",
    "@fastify/cors": "^9.0.1",
    "@fastify/helmet": "^11.1.1",
    "@fastify/rate-limit": "^9.1.0",
    "zod": "^3.22.4",
    "@fastify/type-provider-typebox": "^3.3.0",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.3.1",
    "imapflow": "^1.0.156",
    "nodemailer": "^6.9.8",
    "pdf-lib": "^1.17.1"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^9.0.5",
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^20.10.5",
    "prisma": "^5.7.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "pino-pretty": "^10.2.3"
  }
}

